<Page x:Class="razminka.CreateUpdate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:razminka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateUpdate">

    <Grid>
        <StackPanel>
            <TextBlock Text="Название"></TextBlock>
            <TextBox Name="tb"></TextBox>
            <TextBlock Text="Тип"></TextBlock>
            <ComboBox Name="cb"></ComboBox>
            <TextBlock Text="Материалы"></TextBlock>
            <ListBox Name="lb" SelectionMode="Multiple" ></ListBox>
            <TextBlock Text="Фото"></TextBlock>
            <Image Name="im" Width="100" Height="100"></Image>
            <Button Name="btup" Click="btup_Click"></Button>
            <Button Name="btcrup" Click="btcrup_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
